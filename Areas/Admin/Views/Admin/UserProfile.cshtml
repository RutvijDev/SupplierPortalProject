@model AdminRegistrationVM

<partial name="_Notification" />

<style>
    .form-control[disabled] {
        background-color: #f0f0f0 !important;
        color: #495057 !important;
    }
</style>

<div class="card shadow border-0 mt-4 mb-5">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Your Profile</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4 mx-3">
        <form method="post" class="row">
            <div class="border p-3 mt-2">
                <div class="mb-3">
                    <label asp-for="UserName" class="p-0"></label>
                    <input asp-for="UserName" class="form-control" disabled />
                </div>
                <div class="mb-3">
                    <label asp-for="FullName" class="p-0"></label>
                    <input asp-for="FullName" class="form-control" disabled />
                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="p-0"></label>
                    <input asp-for="Email" class="form-control" disabled />
                </div>
                <div class="mb-3">
                    <label asp-for="PhoneNumber" class="p-0"></label>
                    <input asp-for="PhoneNumber" class="form-control" disabled />
                </div>
                <div class="mb-3">
                    <label asp-for="Role"></label>
                    <input asp-for="Role" class="form-control" disabled />
                </div>
                <a asp-controller="Admin" asp-action="UserProfileUpdate" asp-route-id="@Model.Id" class="btn btn-primary mx-2" style="width:150px;">Edit</a>
                <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary mx-2" style="width:150px">
                    Back
                </a>
            </div>
        </form>
    </div>
</div>
