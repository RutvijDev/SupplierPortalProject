@model List<User>
<partial name="_Notification" />

<div class="card shadow border-0 mt-4 my-2">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">User List</h2>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <div class="custom-select-container">
                    <form class="form-inline" asp-controller="Admin" asp-action="UserRegistration" method="post">
                        <select name="Role" class="btn btn-primary mt-1 me-3" id="userSelect" onmousedown="hideInitialOption()" onchange="this.form.submit()">
                            <option value="" selected><i class="bi bi-plus-circle"></i>Create New User</option>
                            <option value="Admin">Admin</option>
                            <option value="Supplier">Supplier</option>
                            <option value="WareHouseManager">WareHouse Manager</option>
                            <option value="DeliveryPerson">Delivery Person</option>
                        </select>
                    </form>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-12">
                    <table id="tblData" class="table table-bordered table-striped custom-table" style="width:100%;">
                        <thead>
                            <tr>
                                <th style="width:3%;">Id</th>
                                <th style="width:14%;">UserName</th>
                                <th style="width:18%;">FullName</th>
                                <th style="width:20%;">Email</th>
                                <th style="width:14%;">PhoneNumber</th>
                                <th style="width:15%;">Role</th>
                                <th style="width:16%;"></th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function hideInitialOption() {
        var select = document.getElementById('userSelect');
        var initialOption = select.querySelector('option[value=""]');
        initialOption.style.display = 'none';
    }
</script>

@section Scripts{
    <script src="~/js/Admin/userlist.js"></script>
}
