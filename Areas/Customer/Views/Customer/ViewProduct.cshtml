@model CollegeProject.Models.Product

<style>
    .form-control[disabled] {
        background-color: #f0f0f0 !important;
        color: #495057 !important;
    }
</style>

<div class="card shadow border-0 mt-4 mb-5">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Product Details</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4 mx-3">
        <form method="post" class="row" enctype="multipart/form-data">
            <div class="border p-3 mt-2">
                <input asp-for="ProductID" hidden>
                <div class="mb-3">
                    <label asp-for="ProductName" class="p-0"></label>
                    <input asp-for="ProductName" class="form-control" disabled />
                </div>
                <div class="mb-3">
                    <label asp-for="CompanyName" class="p-0"></label>
                    <input asp-for="CompanyName" class="form-control" disabled />
                </div>
                <div class="mb-3">
                    <label asp-for="ProductCategory" class="p-0"></label>
                    <input asp-for="ProductCategory" class="form-control" disabled />
                </div>
                <div class="mb-3">
                    <label asp-for="ProductDescription" class="p-0"></label>
                    <input asp-for="ProductDescription" class="form-control" disabled />
                </div>
                <div class="mb-3">
                    <label asp-for="ProductPrice" class="p-0"></label>
                    <input asp-for="ProductPrice" class="form-control" disabled />
                </div>
                <div class="mb-3">
                    <label asp-for="ProductImage" class="p-0"></label><br />
                    <img src="@Model.ProductImage" height="10%" width="10%">
                </div>
                <div class="mb-3">
                    <label asp-for="ProductStatus"></label>
                    <input asp-for="ProductStatus" class="form-control" disabled />
                </div>
                <a asp-contoller="Customer" asp-action="BuyProduct" asp-route-id="@Model.ProductID" class="btn btn-primary mx-2" style="width:150px">Order Now</a>
                <a asp-controller="Customer" asp-action="Products" class="btn btn-secondary mx-2" style="width:150px">
                    Back To List
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}