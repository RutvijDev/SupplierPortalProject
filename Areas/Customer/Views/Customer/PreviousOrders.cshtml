@model IEnumerable<OrderListVM>

<partial name="_Notification" />

<div class="card shadow border-0 my-3">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Your Previous Orders</h2>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="row pb-3">
            <div class="col-8">
            </div>
            <div class="col-4 text-end">
            </div>
        </div>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-12">
                    <table id="tblData" class="table table-bordered table-striped custom-table" style="width:100%;">
                        <thead>
                            <tr>
                                <th style="width: 15%;">Product Name</th>
                                <th style="width: 15%;">Comapany Name</th>
                                <th style="width: 12%;">Product Category</th>
                                <th style="width: 10%;">Product Image</th>
                                <th style="width: 9%;">Product Price</th>
                                <th style="width: 7%;">Quantity</th>
                                <th style="width: 9%;">TotalPrice</th>
                                <th style="width: 12%;">Order Date</th>
                                <th style="width: 11%;">Delivered Date</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/Customer/PreviousOrders.js"></script>
}
